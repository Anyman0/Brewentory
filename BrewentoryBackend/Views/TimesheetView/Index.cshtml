@model IEnumerable<BrewentoryBackend.DataAccess.Timesheet>

@{
    ViewBag.Title = "Worksheet";
}

<h2>Worksheet</h2>

<p>    
    @Html.ActionLink("Create New", "Create")    
    @Html.ActionLink("Modify shifts", "ShiftsPartial")    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Week)   
            <input type="number" style="width: 45px" min="1" max="53" onkeydown="return false" name="weekInput" />
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tuesday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wednesday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thursday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Friday)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Week)             
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tuesday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wednesday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thursday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Friday)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeID }) |
            @Html.ActionLink("AutoEdit", "AutoEdit", new { id = item.EmployeeID })             
        </td>
    </tr>
}
</table>
