<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brewentory.LoginPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#808080">
            <Label  x:Name="HeaderText" Text="Log In" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,0" TextColor="Black"></Label>
            <Entry x:Name="UsernameEntry" Placeholder="Username"></Entry>
            <Entry x:Name="PasswordEntry" Placeholder="Password"></Entry>
            <StackLayout Orientation="Horizontal">
                <Label x:Name="switchLabel" Text="Remember Me" FontAttributes="Bold" TextColor="Black"></Label>
                <Switch x:Name="rememberSwitch" ></Switch>
            </StackLayout>
            <Button x:Name="LoginButton" Text="Login" FontAttributes="Bold" FontSize="20" Scale="0.7" Clicked="LoginButton_Clicked" ></Button>
            <Button x:Name="LogoutButton" Text="Logout" FontAttributes="Bold" FontSize="20" Scale="0.7" BackgroundColor="PaleVioletRed" Clicked="LogoutButton_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>