<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brewentory.InventoryList" BackgroundColor="AntiqueWhite">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Location               Product             Quantity" HorizontalOptions="Start" />
            <ListView x:Name="inventoryList"></ListView>
        </StackLayout>
    </ContentPage.Content>
    
    <ListView  x:Name="lstView" HasUnevenRows="True" HorizontalOptions="FillAndExpand">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" BackgroundColor="SaddleBrown" >
                        <Label Text = "{Binding Location}" AbsoluteLayout.LayoutBounds="0.25, 0.25, 200, 40" />
                        <Label Text = "{Binding Product}" AbsoluteLayout.LayoutBounds="50, 0.25, 200, 40" />
                        <Label Text = "{Binding Quantity}" AbsoluteLayout.LayoutBounds="100, 0.25, 200, 40" />                        
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage> 